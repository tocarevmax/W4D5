

<form class="show_band" action="<%= band_url(@album.band) %>" method="get">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="submit" name="" value="back to band">
</form>

<h1>Show album</h1>

band: <%= @album.band.name %><br><br>
id: <%= @album.id %><br>
title: <%= @album.title %><br>
year: <%= @album.year %><br>
studio: <%= @album.studio %><br>
band_id: <%= @album.band_id %><br>


<form class="edit_album" action="<%= edit_album_url(@album) %>" method="get">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="submit" name="" value="edit album">
</form>

<form class="delete_album" action="<%= album_url(@album) %>" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="submit" value="delete album">
</form>

<h3>Tracks:</h3>


<form class="new_track" action="<%= new_album_track_url(@album) %>" method="GET">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="submit" name="" value="new track">
</form>

<ul>
<% @album.tracks.each do |track| %>
  <li><a href="<%= track_url(track) %>"><%= track.ord %> - <%= track.title %></a></li>
<% end %>
</ul>
